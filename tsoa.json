{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "./generated/openapi",
    "specVersion": 3
  },
  "routes": {
    "middleware": "koa",
    "routesDir": "./generated",
    "iocModule": "./src/ioc.ts"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
